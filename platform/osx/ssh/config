Host *
  SendEnv LC_*
  PermitLocalCommand yes
  LocalCommand ssh -o PermitLocalCommand=no %n "which git > /dev/null && ([[ -d "~/.dotfiles" ]] && (echo "Updating dotfiles on %h" && cd ~/.dotfiles && git pull -q > /dev/null && git submodule update -q --init --remote > /dev/null && git submodule update -q --init --recursive && ./install > /dev/null) || (echo "Installing dotfiles on %h" && git clone -q https://github.com/BinaryMisfit/dot-files.git ~/.dotfiles > /dev/null && git submodule update -q --init --recursive > /dev/null && ./dotfiles/install > /dev/null))"

Host sensehost
  HostName sensehost.senselesslyfoolish.com
  User willie

Host mini
  HostName mini.misfits.best
  User server

Host binary
  HostName binary.local
  User wirob

Host willie
  HostName willie.local
  User wirob
